@using MVCStock.Models.Entity;
@model List<tblProduct>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}


<table id="ProductTable" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Markası</th>
            <th>Ürün Kategori</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ProductID</th>
                <td>@item.ProductName</td>
                <td>@item.ProductBrand</td>
                <td>@item.tblCategory.CategoryName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ProductID }, new { @class = "btn btn-danger", onclick = "return confirm('Veri silinsin mi?')" })</td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/AddProduct" class="btn btn-primary">Ürün Ekle</a>
<br />

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#ProductTable').DataTable();
</script>